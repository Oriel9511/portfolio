---
import Background from "../components/background.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" id="html-root">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Oriel Arteaga - Full Stack Developer Portfolio" />
		<meta name="keywords" content="Dev, Developer, Oriel Arteaga JimÃ©nez, Portfolio, Ingeniero de Software, Desarrollo Web, Web Development, Software Engineer, Frontend & Backend Developer, Programador, Astro, Asp.Net, React, Node.js, TypeScript, Odoo" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" href="/portfolio/OrielDevIcon.webp" type="image/png">
		<meta name="google-site-verification" content="so2huJ8q2dGAFTDy95ZgvgRaUmCAZcbRhvce69KtS4M" />
		<title>{title}</title>
	</head>
	<body>
		<Background/>
		<Header/>
		<slot />
		<Footer id="footer"/>
		<script>
			import { currentLanguage, initializeLanguage } from '../i18n/languageStore';
			
			// Initialize language on page load
			initializeLanguage();
			
			// Update HTML lang attribute
			function updateHtmlLang() {
				const lang = currentLanguage.get();
				const htmlElement = document.getElementById('html-root');
				if (htmlElement) {
					htmlElement.setAttribute('lang', lang);
				}
			}
			
			// Update on language change
			currentLanguage.subscribe(updateHtmlLang);
			
			// Initial update
			updateHtmlLang();
		</script>
	</body>
</html>
<style is:global>
	:root {
		color-scheme: light dark;
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	body{
		position: relative;
		width: 100vw;
		margin: 0;
		padding: 0;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		overflow-x: hidden;
	}
	#content{
		width: 100%;
	}
	#footer{
		width: 100%;
	}
	@media (prefers-reduced-motion: no-preference) {
        html {
            scroll-behavior: smooth;
        }
	}
	html {
		font-family: system-ui, sans-serif;
		text-shadow: 1px 1px rgba(0,0,0,0.1);
		color: white;
		font-weight: inherit;
		-webkit-font-smoothing: subpixel-antialiased;
		scroll-behavior: smooth;
	}
</style>
