---
import TagProjectPill from "./TagProjectPill.astro";
const {title, description, tags} = Astro.props;
---

<article {...Astro.props} class="flex flex-col gap-y-2 border border-white/10 rounded-lg p-4 w-full backdrop-blur-sm">
    <h2 set:html={title} class="md:text-xl text-3xl font-semibold"></h2>
    <p set:html={description} class="mb-4 md:text-lg text-2xl font-normal text-gray-400"></p>
    <TagProjectPill tags={tags}/>
</article>
