---
import TagProjectPill from "./TagProjectPill.astro";
const {title, description, tags} = Astro.props;
---

<article {...Astro.props} class="flex flex-col gap-y-2 border border-white/10 rounded-lg p-4 w-full">
    <h2 set:html={title} class="text-xl font-semibold"></h2>
    <p set:html={description} class="mb-4 text-lg font-normal text-gray-400"></p>
    <TagProjectPill tags={tags}/>
</article>
