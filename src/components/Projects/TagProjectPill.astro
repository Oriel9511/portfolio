---
const {tags} = Astro.props;
---
<div class="flex flex-wrap gap-2">
    { tags.map((tag) => (
        <div
            class="w-fit rounded-md font-bold text-sm border border-white/10 flex justify-center items-center gap-x-2 py-2 px-4 bg-white/10 hover:bg-white/10 transition"
            {...Astro.props}
        >
            {tag}
        </div>
    ))}
</div>
