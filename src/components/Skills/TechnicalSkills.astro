---
const technicalSkills = [
    { skill: 'Asp.Net', class: 'bg-blue-100 bg-opacity-60 text-blue-700' },
    { skill: 'NodeJS', class: 'bg-green-100 bg-opacity-60 text-green-700' },
    { skill: 'API REST', class: 'bg-gray-100 bg-opacity-60 text-gray-700' },
    { skill: 'Vue', class: 'bg-green-100 bg-opacity-60 text-green-700' },
    { skill: 'NextJS', class: 'bg-gray-100 bg-opacity-60 text-gray-700' },
    { skill: 'Blazor', class: 'bg-blue-100 bg-opacity-60 text-blue-700' },
    { skill: 'C# TS, Python, SQL', class: 'bg-yellow-100 bg-opacity-60 text-yellow-700' },
    { skill: 'Microsoft Visual Studio', class: 'bg-purple-100 bg-opacity-60 text-purple-700' },
    { skill: 'JetBrains IDEs', class: 'bg-orange-100 bg-opacity-60 text-orange-700' },
    { skill: 'Azure Platform', class: 'bg-blue-100 bg-opacity-60 text-blue-700' }
];
---

<div class="flex flex-wrap gap-6 p-4">
    {technicalSkills.map(skill => (
            <span class={`px-4 py-2 rounded-full font-medium ${skill.class}`}>
      {skill.skill}
    </span>
    ))}
</div>
