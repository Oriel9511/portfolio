<script>
    import { currentLanguage } from '../../i18n';

    function updateAboutContent() {
        const lang = currentLanguage.get();
        const paragraphs = document.querySelectorAll('.about-paragraph');

        paragraphs.forEach(p => {
            const text = p.getAttribute(`data-text-${lang}`);
            if (text) p.textContent = text;
        });
    }

    // Update on language change
    currentLanguage.subscribe(updateAboutContent);

    // Initial update
    document.addEventListener('DOMContentLoaded', updateAboutContent);
</script>
