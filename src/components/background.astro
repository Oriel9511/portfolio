<script>
    let bubX = 0;
    let bubY = 0;
    let tgX = 0;
    let tgY = 0;
    document.addEventListener('DOMContentLoaded',() => {
        const interactBubble = document.querySelector<HTMLDivElement>('.interactive');
        const background = interactBubble.closest('.background') || document.body;

        function move(){
            bubX += (tgX - bubX) / 5;
            bubY += (tgY - bubY) / 5;
            interactBubble.style.transform = `translate(${Math.round(bubX)}px, ${Math.round(bubY)}px)`;

            requestAnimationFrame(move);
        }

        window.addEventListener("mousemove", (event) => {
            const rect = background.getBoundingClientRect();
            tgX = event.clientX - rect.left;
            tgY = event.clientY - rect.top;
        });

        move();
    });
</script>

